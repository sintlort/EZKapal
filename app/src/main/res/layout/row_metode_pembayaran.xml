<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_metode_pembayaran"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icon_metode"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="15dp"
                android:src="@drawable/metode_pembayaran"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/metode"
                style="@style/PembelianTextSecondary"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="@string/metode"
                app:layout_constraintBottom_toTopOf="@id/metode_pembayaran"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/icon_metode" />

            <TextView
                android:id="@+id/metode_pembayaran"
                style="@style/PembelianTextPrimary"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="@string/metode_pembayaran"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/icon_metode"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nomor_rekening"
                style="@style/PembelianTextSecondary"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="@string/nomor_rekening"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/icon_metode"
                app:layout_constraintTop_toBottomOf="@id/metode_pembayaran" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>